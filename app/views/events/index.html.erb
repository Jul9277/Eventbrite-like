<h1>Les évènements </h1>
<p>Parcourez la page et choisissez l'évènements qui vous corresponds, enjoy!</p>

<table class="table">
	<thead class="thead-light">
		<tr>
			<th>Name</th>
			<th>Date</th>
			<th>Lieu</th>
		</tr>
	</thead>
<% @events.each do |event| %>
	<tr>
		
		<td>
			<%= link_to event.description, event_path(event.id) %>
		</td>
		<td>
			<%= event.date %>
		</td>
		<td>
			<%= event.place %>
		</td>
	</tr>
<% end %>
</table>

<%= link_to 'new', new_event_path %>